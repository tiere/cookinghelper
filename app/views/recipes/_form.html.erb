<div class="row">
  <div class="large-12 columns">
    <%= simple_nested_form_for recipe do |f| %>
    <fieldset>
      <legend>Recipe</legend>
      <div class="row">
        <div class="large-6 columns">
          <%= f.input :name, placeholder: 'Name of the recipe' %>
        </div>
        <div class="large-6 columns">
          <%= f.association :category, prompt: 'Select category' %>
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <fieldset>
            <legend>Ingredients</legend>
            <%= f.simple_fields_for :ingredients %>
            <%= f.link_to_add "Add an ingredient", :ingredients, class: 'small-orange-button' %>
          </fieldset>
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <fieldset>
            <legend>Steps</legend>
            <%= f.simple_fields_for :steps %>
            <%= f.link_to_add 'Add a step', :steps, class: 'small-orange-button' %>
          </fieldset>
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <%= f.button :submit %>
        </div>
      </div>
    </fieldset>
    <% end %>
    <div class="row">
      <div class="large-3 columns">
        <%= link_to 'Back to recipes', recipes_path, class: 'back-button' %>
      </div>
    </div>
  </div>
</div>