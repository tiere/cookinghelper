<fieldset>
  <legend>Step</legend>
  <div class="row">
    <div class="small-12 medium-6 columns">
      <%= f.input :name, placeholder: 'Name of the step' %>
    </div>
    <div class="small-12 medium-6 columns">
      <div class="row">
        <div class="small-12 medium-12 columns">
          <%= f.label :duration %>
        </div>
      </div>
      <div class="row">
        <div class="small-4 medium-2 columns">
          <%= f.input :duration_h, as: :integer, label: false, required: true, placeholder: 'hh' %>
        </div>
        <div class="small-4 medium-2 columns">
          <%= f.input :duration_m, as: :integer, label: false, required: true, placeholder: 'mm' %>
        </div>
        <div class="small-4 medium-2 columns">
          <%= f.input :duration_s, as: :integer, label: false, required: true, placeholder: 'ss' %>
        </div>
        <div class="small-12 medium-6 columns">
          <%= f.link_to_remove "Remove this step", class: "button secondary postfix" %>
        </div>
      </div>
    </div>
  </div>
</fieldset>