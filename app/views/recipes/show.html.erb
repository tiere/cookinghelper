<div class="row">
  <div class="large-12 columns">
    <h1><%= @recipe.name %></h1>
    <h2>Ingredients</h2>
    <% @recipe.ingredients.each do |ingredient| %>
    <p><%= ingredient.name %></p>
    <% end %>
    <h2>Steps</h2>
    <% @recipe.steps.each do |s| %>
    <p><%= s.name %></p>
    <p><%= s.duration %></p>
    <% end %>
    <p><%= link_to "Go to recipe listing", recipes_path %></p>
  </div>
</div>