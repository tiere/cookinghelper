<% provide(:title, 'Edit user') %>
<%= content_for :header do %>
    <h2>Update your profile</h2>
    <h4>Change the information in your profile</h4>
<% end %>
<div class="row">
  <div class="small-12 medium-6 columns">
    <div class="padding-bottom">
    <%= gravatar_for @user, size: 300 %>
    </div>
    <%= link_to "Change Gravatar", "http://gravatar.com/emails", target: '_blank', class: 'button' %>
  </div>
  <div class="small-12 medium-6 columns">
    <%= render 'form', user: @user, submit_text: 'Update Information' %>
  </div>
</div>